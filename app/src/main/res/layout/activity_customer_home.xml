<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".DriverLoginActivity">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_button_rounded"
            android:text="logout"
            android:textColor="#1976D2" />

        <Button
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_button_rounded"
            android:text="history"
            android:textColor="#1976D2" />

        <Button
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_button_rounded"
            android:text="Settings"
            android:textColor="#1976D2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="632dp"
        android:layout_below="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="14dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:weightSum="2">


        <EditText
            android:id="@+id/requestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Date"
            android:inputType="date"
            android:singleLine="true" />

        <EditText
            android:id="@+id/requestTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:inputType="time"
            android:singleLine="true" />

        <EditText
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Item(s)"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/pickupLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Pick-up Location"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Destination"
            android:inputType="text"
            android:singleLine="true" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/UberX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LuggerX" />

            <RadioButton
                android:id="@+id/UberBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LuggerXL" />

            <RadioButton
                android:id="@+id/UberXl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LuggerXXL" />

        </RadioGroup>

        <Button
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="80dp"
            android:background="@drawable/white_button_rounded"
            android:text="Request Lugger"
            android:textColor="#1976D2" />


    </LinearLayout>





</RelativeLayout>
